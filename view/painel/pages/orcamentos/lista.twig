{% extends "layout/layoutPanel.twig" %}

{% block title %}Lista de Orçamentos{% endblock %}

{% block body %}

<!-- BEGIN: Content-->
<div class="app-content content">

    <div class="card card-company-table">
        <div class="card-header pb-0">
            <h5 class="card-title">Lista de Orçamentos</h5>
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table dataTable_list">
                    <thead>
                        <tr>
                            <th class="d-none">#</th>
                            <th>Visita</th>
                            <th width="175">Status</th>
                            <th class="text-end">Data da Visita</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for visita in visitas %}
                        <tr>
                            <td class="d-none">{{ visita.visita_id }}</td>

                            <td>
                                <a href="{{ DOMAIN }}/painel/orcamentos/editar/{{ visita.visita_id }}" class="text-uppercase"><b>{{ visita.title }}</b></a>
                                <div class="d-flex">
                                    <a href="{{ DOMAIN }}/painel/orcamentos/editar/{{ visita.visita_id }}" class="opacity-75">Editar Orçamento</a>
                                </div>
                            </td>
                            
                            <td>
                                <div>
                                    {% if visita.status_visita == 'Concluido' %}<span class="badge bg-dark text-white text-uppercase">{{ visita.status_visita }}</span>{% endif %}
                                    {% if visita.status_visita == 'Pendente' %}<span class="badge bg-warning text-black text-uppercase">{{ visita.status_visita }}</span>{% endif %}
                                    {% if visita.status_visita == 'Aprovado' %}<span class="badge bg-success text-black text-uppercase">{{ visita.status_visita }}</span>{% endif %}
                                    {% if visita.status_visita == 'Recusado' %}<span class="badge bg-danger text-white text-uppercase">{{ visita.status_visita }}</span>{% endif %}
                                </div>
                            </td>

                            <td class="text-end">
                                {{ visita.data_visita | date("d-m-Y") }} {{ visita.horario_visita }}
                            </td>

                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>

<script src="{{ PATH }}/view/painel/src/js/scripts/pages/orcamentos.js"></script>

{% endblock %}