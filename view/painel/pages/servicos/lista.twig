{% extends "layout/layoutPanel.twig" %}

{% block title %}56 minutos - Meus Saques{% endblock %}

{% block body %}

    <!-- BEGIN: Content-->
    <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- Dashboard Ecommerce Starts -->
                <section id="dashboard-ecommerce">

                    <div class="row match-height">

                        <div class="col-lg-12 col-12">
                            <div class="card card-company-table">
                                <div class="card-header pb-0">
                                    <h5 class="card-title">Meus Servi√ßos</h5>
                                    <div class="heading-elements">
                                        <a class="btn btn-primary" href="{{ DOMAIN }}/painel/servicos/add"><i class="fa-regular fa-plus"></i> Add Novo</a>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table dataTable_list">
                                            <thead>
                                                <tr>
                                                    <th>Nome</th>
                                                    <th>Valor</th>
                                                    <th>Status</th>
                                                    <th width="100" class="text-end">Data</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for servico in servicos %}
                                                <tr>
                                                    <td>
                                                        <div><a href="{{ DOMAIN }}/painel/servicos/edit/{{ servico.id }}" class="title text-uppercase">{{ servico.titulo }}</a></div>
                                                        <div class="row-actions">
                                                            <span class="edit"><a href="{{ DOMAIN }}/painel/servicos/edit/{{ servico.id }}">Editar</a> | </span>
                                                            <span class="view"><a href="{{ DOMAIN }}/area/{{ servico.id }}/{{ servico.slug }}" target="_blank">Ver</a> | </span>
                                                            <span class="delete"><a href="javascript:void(0);" data-bs-toggle="modal-remote" data-remote="assets/modal/produtos/status.php?id=1&status=Deletado" data-bs-target="#alterar_status" class="text-danger">Deletar</a></span>
                                                        </div>
                                                    </td>
                                                    <td>R$ <b>{{ servico.preco|number_format(2, ',', '.') }}</b></td>
                                                    <td><div class="badge bg-{{ (servico.status == 'Rascunho') ? 'warning' : 'success' }}">{{ servico.status }}</div></td>
                                                    <td class="text-end">{{ servico.data|date('d-m-Y \\a\\s H:i') }}</td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Nome</th>
                                                    <th>Valor</th>
                                                    <th>Status</th>
                                                    <th width="100" class="text-end">Data</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
+
                    </div>

                </section>

            </div>
        </div>
    </div>

{% endblock %}