<div id="pergunta{{ pergunta.id }}" class="highcharts-dashboards-dark"></div>

<script type="text/javascript">
    Highcharts.chart('pergunta{{ pergunta.id }}', {
        chart: {
            type: 'column'
        },
        title: {
            align: 'left',
            text: '{{ pergunta.pergunta }}'
        },
        accessibility: {
            announceNewData: {
                enabled: true
            }
        },
        xAxis: {
            type: 'category'
        },
        yAxis: {
            title: {
                text: 'Total para cada voto'
            }

        },
        legend: {
            enabled: false
        },
        plotOptions: {
            series: {
                borderWidth: 0,
                dataLabels: {
                    enabled: true,
                    format: '{point.y}'
                }
            }
        },

        tooltip: {
            headerFormat: '<span style="font-size:11px"></span><br>',
            pointFormat: '<b>{point.y}</b>'
        },

        series: [
            {
                name: 'Notas',
                colorByPoint: true,
                data: [
                    {% for j in 0..5 %}
                        {% set i = 5 - j %}
                        {name: '{{ j }}', y:{{ pergunta.estatisticas[i].qtd == null ? '0' : pergunta.estatisticas[i].qtd }}}{% if j != 5 %},{% endif %}
                    {% endfor %}
                ]
            }
        ]
    });
</script>

