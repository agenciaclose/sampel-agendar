{% extends "layout/layoutPanel.twig" %}

{% block title %}56 minutos - Meus Saques{% endblock %}

{% block body %}

    <!-- BEGIN: Content-->
    <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- Dashboard Ecommerce Starts -->
                <section id="dashboard-ecommerce">
                    <div class="row match-height">
                        <!-- Medal Card -->
                        <div class="col-xl-4 col-md-6 col-12">
                            <div class="card card-congratulation-medal">
                                <div class="card-body">
                                    <h5>ParabÃ©ns ðŸŽ‰ {{ _session.sampel_user_nome }}!</h5>
                                    <p class="card-text font-small-3">EstÃ¡ Ã© sua carteira atÃ© agora</p>
                                    <h1 class="mb-75 mt-2 pt-50">
                                        <a href="javascript:void(0);">R$ {{ carteira|number_format(2, ',', '.') }}</a>
                                    </h1>
                                    <img src="{{ PATH }}/view/painel/src/images/illustration/badge.svg" class="congratulation-medal" alt="Medal Pic" />
                                </div>
                            </div>
                        </div>

                        <!-- Statistics Card -->
                        <div class="col-xl-8 col-md-6 col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title">Contas Bancarias</h5>
                                    <div class="heading-elements">
                                        {% if contas|length < 2 %}
                                        <a class="btn btn-primary" href="javascript:void(0)" data-bs-toggle="modal-remote" data-remote="{{ DOMAIN }}/painel/saques/conta/criar" data-bs-target="#conta">CADASTRAR CONTA</a>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tbody>
                                                {% for conta in contas %}
                                                <tr>
                                                    <td>{{ conta.conta_banco }}</td>
                                                    <td>{{ conta.conta_ag }}</td>
                                                    <td>{{ conta.conta_numero }}</td>
                                                    <td>{{ conta.conta_tipo }}</td>
                                                    <td>{{ conta.conta_responsavel }}</td>
                                                    <td>{{ conta.conta_cpf_cnpj }}</td>
                                                    <td><a href="javascript:void(0);" data-bs-toggle="modal-remote" data-remote="{{ DOMAIN }}/painel/saques/conta/editar/{{ conta.id }}" data-bs-target="#conta" class="text-white"><i class="fa-thin fa-pen-to-square"></i></a></td>
                                                </tr>
                                                {% endfor %}
                                                {% if contas|length == 0 %}
                                                    <tr><td colspan="7">Nenhuma conta bancaria cadastrada.</td></tr>
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/ Statistics Card -->
                    </div>

                    <div class="row match-height">

                        <div class="col-lg-12 col-12">
                            <div class="card card-company-table">
                                <div class="card-header pb-0">
                                    <h5 class="card-title">Meus Saques</h5>
                                    <div class="heading-elements">
                                        <a class="btn btn-primary" href="javascript:void(0)" data-bs-toggle="modal-remote" data-remote="{{ DOMAIN }}/painel/saques/conta/add-saque" data-bs-target="#saque">SOLICITAR SAQUE</a>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table dataTable_list">
                                            <thead>
                                                <tr>
                                                    <th>Conta</th>
                                                    <th>Valor</th>
                                                    <th>Status</th>
                                                    <th width="150" class="text-end">Data</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for saque in saques %}
                                                <tr>
                                                    <td>
                                                        <div><b>{{ saque.conta_banco }} {{ (saque.banco_pix == 'Pix') ? ' - Pix' }}</b></div>
                                                        {% if saque.banco_pix == 'Banco' %}
                                                            <small>
                                                                <div>{{ saque.conta_numero }} / {{ saque.conta_ag }} - {{ saque.conta_tipo }}</div>
                                                                <div>{{ saque.conta_responsavel }} - {{ saque.conta_cpf_cnpj }}</div>
                                                            </small>
                                                        {% else %}
                                                            <small>
                                                                <div>{{ saque.conta_responsavel }} - {{ saque.conta_cpf_cnpj }}</div>
                                                            </small>
                                                        {% endif %}
                                                    </td>
                                                    <td>R$ <b>{{ saque.valor|number_format(2, ',', '.') }}</b></td>
                                                    <td>
                                                        {% if saque.status == 'Pendente' %}
                                                            <div class="badge bg-warning" title="Aguarde 24h. Seu saque estÃ¡ sendo processado.">{{ saque.status }}</div>
                                                        {% elseif saque.status == 'Concluido' %}
                                                            <div class="badge bg-success" title="Saque concluido.">{{ saque.status }}</div>
                                                        {% else %}
                                                            <div class="badge bg-danger" title="Saque rejeitado.">{{ saque.status }}</div>
                                                        {% endif %}
                                                        {% if saque.nota != '' %}<span data-bs-toggle="tooltip" data-bs-placement="top" data-bs-custom-class="primary-tooltip" title="{{ saque.nota }}"><i class="fa-solid fa-message-exclamation fa-lg text-danger"></i></span>{% endif %}
                                                    </td>
                                                    <td class="text-end">{{ saque.date_create|date('d-m-Y \\a\\s H:i') }}</td>
                                                </tr>
                                            </tbody>
                                                {% endfor %}
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </section>

            </div>
        </div>
    </div>

    <div class="modal fade" id="conta" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body p-0"></div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="saque" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body p-0"></div>
            </div>
        </div>
    </div>

    <script src="{{ PATH }}/view/painel/src/js/scripts/pages/saques.js"></script>

{% endblock %}