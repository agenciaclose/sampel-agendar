<div class="col-xxl-4 col-xl-6 col-lg-12 mt-2">
    <div class="card h-100">
        <div class="card-header d-flex justify-content-between">
            <div class="card-title d-flex justify-content-between align-items-center w-100 mb-0">
                <h4 class="mb-0">Curva ABC de Pedidos</h4>
                <p class="card-subtitle">{{ pedidosTotal|length }}  Pedidos</p>
            </div>
        </div>
        <div class="card-body pb-0">
            <div class="table-responsive">
                <table class="table table-striped list-unstyled mb-0" id="curva_abc">
                    <thead class="d-none">
                        <tr>
                            <th>Produto</th>
                            <th>Porcentagem</th>
                            <th class="text-end">Valores</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in curvaABC %}
                        <tr>
                            <td style="max-width: 38px" class="pe-0 ps-1"><a href="{{ item.imagem }}" class="img"><img src="{{ item.imagem }}" class="rounded" width="38"></a></td>
                            <td>
                                <a href="{{ DOMAIN }}/painel/produtos/user/{{ item.id }}">
                                    <div class="me-1">
                                        <h6 class="mb-0">{{ item.nome }}</h6>
                                        <small class="text-body">{{ item.codigo }}</small>
                                    </div>
                                </a>
                            </td>
                            <td class="text-end">
                                <a href="{{ DOMAIN }}/painel/produtos/user/{{ item.id }}">
                                    <div class="d-flex justify-content-end align-items-center">
                                        <p class="mb-0">{{ item.porcentagem }}%</p>
                                        <div class="ms-2 badge bg-label-success">{{ item.curva_abc }}</div>
                                    </div>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--/ Source Visit -->