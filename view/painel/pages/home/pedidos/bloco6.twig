<!-- Assignment Progress -->
<div class="col-xxl-4 col-md-6 mt-2">
    <div class="card h-100">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="card-title d-flex justify-content-between align-items-center w-100 mb-0">
            <h4 class="mb-0">Pedidos por Estado</h4>
            <p class="card-subtitle">{{ pedidosTotal|length }}  Pedidos</p>
        </div>
    </div>
    <div class="card-body">
        <table class="table list-unstyled mb-0" id="pedidos_estados">
            <thead class="d-none">
                <tr>
                    <th>Nome</th>
                    <th>Valores</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in pedidosEstados %}
                {% set bg_colors = ['primary', 'success', 'danger', 'warning', 'info'] %}
                <tr class="mb-1">
                    <td class="chart-progress p-0" data-color="{{ bg_colors[(loop.index0 % bg_colors|length)] }}" data-series="{{ item.porcentagem_pedidos }}" data-progress_variant="true"></td>
                    <td class="align-items-center">
                        <h6>{{ item.estado_pedido }}</h6>
                        <small>{{ item.quantidade_pedidos }} Pedidos</small>
                    </td>
                    <td class="text-end">
                        <a href="{{ DOMAIN }}/painel/pedidos?estado={{ item.estado_pedido }}" class="btn btn-dark btn-sm"><i class="fa-light fa-lg fa-arrow-right-to-line"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<!--/ Assignment Progress -->