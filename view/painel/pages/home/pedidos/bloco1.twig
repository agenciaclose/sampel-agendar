<div class="row g-6 mb-2">

    <div class="col-lg-3 col-sm-6">
        <div class="card card-border-shadow-success h-100">
            <div class="card-body pb-0">
                <div class="d-flex align-items-center mb-2">
                    <div class="avatar me-1">
                        <span class="avatar-initial rounded bg-label-success">
                            <i class="fa-regular fs-5 fa-box-open-full"></i>
                        </span>
                    </div>
                    <h2 class="mb-0">{{ produtosSemPDV|length }}</h2>
                </div>
                <h4 class="mb-1">Total de Produtos Normais</h4>
                <p class="mb-0">
                    <span class="text-heading fw-bolder text-success me-2">R$ {{ valorTotalEstoque.valor_total_estoque|number_format(2, ',', '.') }}</span>
                    <small>Valor Estoque</small>
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-sm-6">
        <div class="card card-border-shadow-warning h-100">
            <div class="card-body pb-0">
                <div class="d-flex align-items-center mb-2">
                    <div class="avatar me-1">
                        <span class="avatar-initial rounded bg-label-warning">
                            <i class="fa-regular fs-5 fa-recycle"></i>
                        </span>
                    </div>
                    <h2 class="mb-0">{{ produtosPDV|length }}</h2>
                </div>
                <h4 class="mb-1">Total de Produtos PDV</h4>
                <p class="mb-0">
                    <span class="text-heading fw-bolder text-warning me-2">R$ {{ valorTotalEstoquePDV.valor_total_estoque_PDV|number_format(2, ',', '.') }}</span>
                    <small>Valor Estoque PDV</small>
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-sm-6">
        <div class="card card-border-shadow-info h-100">
            <div class="card-body pb-0">
                <div class="d-flex align-items-center mb-2">
                    <div class="avatar me-1">
                        <span class="avatar-initial rounded bg-label-info">
                            <i class="fa-regular fs-5 fa-cart-circle-plus"></i>
                        </span>
                    </div>
                    <h2 class="mb-0">{{ pedidosTotal|length }}</h2>
                </div>
                <h4 class="mb-1">Total de Pedidos</h4>
                <p class="mb-0">
                    <span class="text-heading fw-bolder text-info me-2">R$ 1.000.000,00</span>
                    <small>Valor Total de todos os pedidos</small>
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-sm-6">
        <div class="card card-border-shadow-danger h-100">
            <div class="card-body pb-0">
                <div class="d-flex align-items-center mb-2">
                    <div class="avatar me-1">
                        <span class="avatar-initial rounded bg-label-danger">
                            <i class="ti ti-clock ti-28px"></i>
                            <i class="fa-regular fs-5 fa-cart-circle-xmark"></i>
                        </span>
                    </div>
                    <h2 class="mb-0">{{ produtosSemEstoque|length }}</h2>
                </div>
                <h4 class="mb-1">Produtos sem Estoque</h4>
                <p class="mb-0">
                    <span class="text-heading fw-bolder text-danger me-2">R$ 1.000,00</span>
                    <small>Valor de Produtos sem Estoque</small>
                </p>
            </div>
        </div>
    </div>

</div>