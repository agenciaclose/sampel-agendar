{% extends "layout/layoutPanel.twig" %}

{% block title %}Lista de Cargos{% endblock %}

{% block body %}

    <!-- BEGIN: Content-->
    <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row"></div>
            <div class="content-body">

                <div class="row">

                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="card">
                            <div class="card-body py-1">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>Lista de Cargos</div>
                                    {% if 'add' in permissions.cargos %}<div><a class="btn btn-primary" href="javascript:void(0)" data-bs-remote="{{ DOMAIN }}/painel/equipes/cargos/add" data-bs-toggle="offcanvas" data-bs-target="#rolemanager" aria-controls="rolemanager"><i class="fa-regular fa-plus"></i> Add Novo</a></div>{% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">

                    {% if cargos|length == 0 %}<div class="col-12">Nenhum cargo encontrado</div>{% endif %}

                    {% for cargo in cargos %}
                    <div class="col-lg-3 col-md-3 col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between py-1 mb-1 border-bottom">
                                    <div><h4>{{ cargo.role }}</h4></div>
                                    <div>
                                        {% if 'add' in permissions.cargos %}<a href="javascript:void(0)" class="me-2" data-bs-remote="{{ DOMAIN }}/painel/equipes/cargos/edit/{{ cargo.id }}" data-bs-toggle="offcanvas" data-bs-target="#rolemanager"><i class="fa-solid fa-pen-to-square"></i></a>{% endif %}
                                        {% if 'delete' in permissions.cargos %}<a href="javascript:void(0)" class="text-danger removerole" data-item="{{ cargo.id }}"><i class="fa-solid fa-trash"></i></a>{% endif %}
                                    </div>
                                </div>
                                <div>
                                    {% set permissions_list = cargo.permissions|json_decode %}
                                    {% for key, values in permissions_list %}
                                        <span class="badge bg-info text-black text-capitalize">{{ key }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                </div>

            </div>
        </div>
    </div>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="rolemanager" aria-labelledby="rolemanagerLabel">
        <div class="offcanvas-body">
            Carregando...
        </div>
    </div>
    <script src="{{ PATH }}/view/painel/src/js/scripts/pages/cargos.js"></script>
{% endblock %}