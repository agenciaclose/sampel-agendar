{% extends "layout/layoutPanel.twig" %}

{% block title %} Ver Pedido {% endblock %}

{% block body %}

    <!-- BEGIN: Content-->
    <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row"></div>
            <div class="content-body">

				<div class="card">
					<div class="card-body">

						<div class="d-flex justify-content-between flex-wrap align-items-end">

							<div class="mb-1 flex-fill w-md-100">
								<label for="id_equipe" class="form-label">Retirada em nome:</label>
								<input type="text" class="form-control" value="{{ pedido.equipe }}" readonly>
							</div>

							<div class="mb-1 flex-fill w-md-100 ms-md-3">
								<label for="id_equipe" class="form-label">Solicitante:</label>
								<input type="text" class="form-control" value="{{ pedido.solicitante }}" readonly>
							</div>

							<div class="mb-1 flex-fill w-md-100 mx-md-3">
								<label for="id_equipe" class="form-label">Estado de despacho:</label>
								<input type="text" class="form-control" value="{{ pedido.estado_pedido }}" readonly>
							</div>

							<div class="mb-1 flex-fill w-md-100">
								<label for="id_equipe" class="form-label">Finalidade do pedido:</label>
								<input type="text" class="form-control" value="{{ pedido.finalidade }}" readonly>
							</div>

						</div>

						<div class="d-flex justify-content-between flex-wrap align-items-end">
							<div class="mb-1 flex-fill w-md-100">
								<label for="tipo_evento" class="form-label">Víncular a um Tipo de Evento</label>
								<input type="text" class="form-control" value="{{ pedido.tipo_evento }}" readonly>
							</div>
							<div class="mb-1 flex-fill mx-md-3 w-md-100">
								<div class="id_evento">
									<label for="id_evento" class="form-label">Nome do Evento</label>
									<input type="text" class="form-control" value="{{ evento.data_evento|date("d-m-Y") }} - {{ evento.nome_evento }}" readonly>
								</div>
							</div>
							<div class="mb-1 flex-fill me-md-3 w-md-100">
								<label for="descricao_pedido" class="form-label">Informações sobre o Pedido</label>
								<input type="text" class="form-control" value="{{ pedido.descricao_pedido }}" readonly>
							</div>
							<div class="mb-1 flex-fill me-md-3 w-md-100">
								<label for="descricao_pedido" class="form-label">Valor Total do Pedido</label>
								<input type="text" class="form-control" value="{{ pedido.valor_total_pedido }}" readonly>
							</div>
							<div class="mb-1">
								<button type="button" class="btn btn-primary border-0 rounded-0 text-black text-uppercase {{ pedido.status_pedido }}-bg ">{{ pedido.status_pedido }}</button>
							</div>
						</div>

						<div class="table-responsive lista_produtos"> 
							<div class="table-wrapper">
								<table id="produtos" class="table table-striped table-hover">
									<thead>
										<tr>
											<th></th>
											<th class="filter-column"><i class="fa-regular fa-magnifying-glass"></i> Nome Produto</th>
											<th>Codigo</th>
											<th class="text-center">Embalagem</th>
											<th class="text-center">Unidades</th>
											<th class="text-center">Valor Unit (R$)</th>
											<th class="text-center" width="50">Quantidade</th>
											<th class="text-center" width="50">Qtd Total</th>
											<th class="text-center">Valor Total (R$)</th>
										</tr>
									</thead>
									<tbody>
										{% for produto in itens %}
											<tr>
												<td class="p-0">
													<input type="hidden" name="id_produto[]" value="{{ produto.id }}">
													{% if produto.imagem != '' %}
														<a href="{{ produto.imagem }}" class="img"><img src="{{ produto.imagem }}" width="50" class="img-fluid"></a>
													{% else %}                                                            
														<img src="{{ DOMAIN }}/view/painel/src/images/produtos/produto-placeholder-small.png" width="50" class="img-fluid">
													{% endif %}
												</td>
												<td>{{ produto.nome }}</td>
												<td>{{ produto.codigo }}</td>
												<td class="text-center">{{ produto.embalagem }} / {{ produto.quantidade }}</td>
												<td class="text-center">{{ produto.unidades }}</td>
												<td class="text-center">
													R$ {{ produto.preco|number_format(2, ',', '.') }}
													<input type="hidden" name="valor_unid[]" value="{{ produto.preco|number_format(2, ',', '.') }}">
												</td>
												<td class="text-center" width="50">
													<span class="badge bg-success text-black">{{ produto.qtd_escolhida }}</span>
												</td>
												<td class="text-center" width="50">
													<span class="text-success">{{ produto.qt_total }}</span>
												</td>
												<td class="text-center text-success">
													R$ <span class="valorItemTotal">{{ produto.valor_total }}</span>
												</td>
											</tr>
										{% endfor %}

									</tbody>
								</table>
							</div>
						</div>

					</div>
				</div>

			</div>
		</div>
	</div>

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="{{ DOMAIN }}/view/painel/src/vendors/numspin/js/input-numspin.js"></script>
<link href="{{ DOMAIN }}/view/painel/src/vendors/numspin/css/input-numspin.min.css" rel="stylesheet" type="text/css" />
<script src="{{ DOMAIN }}/view/painel/src/js/scripts/pages/pedidos.js"></script>
{% endblock %}