{% extends "layout/layoutPanelLogin.twig" %}
{% block body %}
	<style>.form-control {color: #000;}</style>
	<div class="content-body">

		<div class="card text-uppercase">
			<div class="card-body">
				<div class="d-flex justify-content-between flex-wrap align-items-end">
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="id_equipe" class="form-label">Retirada em nome:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ pedido.equipe }}</div>
					</div>
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="id_equipe" class="form-label">Estado de despacho:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ pedido.estado_pedido }}</div>
					</div>
					{% if pedido.tipo_evento != 'extra' %}
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<div class="id_evento">
							<label for="id_evento" class="form-label">Nome do Evento:</label>
							<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ evento.data_evento|date("d-m-Y") }} - {{ evento.nome_evento }}</div>
						</div>
					</div>
					{% endif %}
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="descricao_pedido" class="form-label">Valor Total do Pedido:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0 fw-bold">R$ {{ pedido.valor_total_pedido|number_format(2, ',', '.') }}</div>
					</div>
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="status_pedido" class="form-label">Status do Pedido</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0 fw-bold">{{ pedido.status_pedido|pedidoStatus|raw }}</div>
					</div>
				</div>

				<div class="d-flex justify-content-between flex-wrap align-items-end">
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="id_equipe" class="form-label">A/C:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ pedido.emitente_nome }}</div>
					</div>
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="id_equipe" class="form-label">Código do Cliente:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ pedido.emitente_codigo }}</div>
					</div>
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="id_equipe" class="form-label">Transportadora:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ pedido.transportadora }}</div>
					</div>
				</div>

				<div class="d-flex justify-content-between flex-wrap align-items-end">
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="id_equipe" class="form-label">Expedição:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ pedido.expedicao }}</div>
					</div>
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="id_equipe" class="form-label">Qtda. Cx.:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ pedido.qtd_caixa }}</div>
					</div>
					<div class="mb-1 flex-fill w-md-100 me-md-1">
						<label for="id_equipe" class="form-label">Observação:</label>
						<div class="form-control text-uppercase rounded-0 border-0 border-bottom px-0">{{ pedido.descricao_pedido }}</div>
					</div>
				</div>

			</div>
		</div>

		<div class="card">
			<div class="card-body">

				<div class="table-responsive lista_produtos"> 
					<div class="table-wrapper">
						<table id="produtos" class="table table-striped table-hover">
							<thead>
								<tr class="text-black">
									<th>Código</th>
									<th>Produto</th>
									<th>Qtd Total</th>
									<th style="text-align:right" align="right">Valor Uni.</th>
								</tr>
							</thead>
							<tbody>
								{% for produto in itens %}
									<tr class="text-black">
										<td>{{ produto.codigo }}</td>
										<td>{{ produto.nome }}</td>
										<td>{{ produto.qt_total }}</td>
										<td align="right">R$ {{ produto.valor_unid|number_format(2, ',', '.')  }}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>

	</div>
<script>window.onload = function() { window.print(); };</script>
{% endblock %}