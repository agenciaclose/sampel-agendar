{% extends "layout/layoutPanel.twig" %}

{% block title %} Pedidos {% endblock %}

{% block body %}

    <!-- BEGIN: Content-->
    <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row"></div>
            <div class="content-body">

				<div class="card">
					<div class="card-body">

                        <div class="table-responsive min-vh-100"> 
                            <table class="table table-striped table-hover" id="pedidos">
                                <thead>
                                    <tr>
                                        <th class="text-center" width="50">ID</th>
                                        <th width="125">Data Pedido</th>
                                        <th>Comprador</th>
                                        <th>Solicitante</th>
                                        <th>Destino</th>
                                        <th>Valor Pedido</th>
                                        <th width="100">Status</th>
                                        <th class="text-end">Opções</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for pedido in pedidos %}
                                    <tr>
                                        <th class="text-center" width="50">{{ pedido.id }}</th>
                                        <td width="125"><a href="{{ DOMAIN }}/painel/pedidos/view/{{ pedido.id }}">{{ pedido.date_create|date("d-m-Y H:i") }}</a></td>
                                        <td><a href="{{ DOMAIN }}/painel/pedidos/view/{{ pedido.id }}">{{ pedido.equipe }}</a></td>
                                        <td><a href="{{ DOMAIN }}/painel/pedidos/view/{{ pedido.id }}">{{ pedido.solicitante }}</a></td>
                                        <td><a href="{{ DOMAIN }}/painel/pedidos/view/{{ pedido.id }}">{{ pedido.estado_pedido }}</a></td>
                                        <td><a class="text-success fw-bold" href="{{ DOMAIN }}/painel/pedidos/view/{{ pedido.id }}">R$ {{ pedido.valor_total_pedido|number_format(2, ',', '.') }}</a></td>
                                        <td width="100" class="{{ pedido.status_pedido }}-bg text-black fw-bold text-center text-uppercase">{{ pedido.status_pedido }}</td>
                                        <td width="100" class="text-end">
                                            <div class="btn-group dropstart">
                                                <a href="javascript:void(0)" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="fa-solid fa-ellipsis"></i>
                                                </a>
                                                <ul class="dropdown-menu">
                                                    {% if pedido.status_pedido != 'Recusado' %}
                                                    <li><a class="dropdown-item text-warning" href="{{ DOMAIN }}/painel/pedidos/edit/{{ pedido.id }}"><i class="fa-solid fa-pen-to-square"></i> Editar</a></li>
                                                    <li><a class="dropdown-item text-success" href="javascript:void(0)" onclick="statusPedido({{ pedido.id }},'Aprovado')"><i class="fa-solid fa-shield-check"></i> Aprovar</a></li>
                                                    <li><a class="dropdown-item text-info" href="javascript:void(0)" onclick="statusPedido({{ pedido.id }},'Revisar')"><i class="fa-solid fa-pen-to-square"></i> Revisar</a></li>
                                                    <li><a class="dropdown-item text-danger" href="javascript:void(0)" onclick="statusPedido({{ pedido.id }},'Recusado')"><i class="fa-solid fa-shield-xmark"></i> Recusar</a></li>
                                                    {% else %}
                                                    <li><a class="dropdown-item text-center" href="javascript:void(0)">Pedido recusado <br>não pode ser <br>gerenciado</a></li>
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </td>               
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
						
					</div>
				</div>

			</div>
		</div>
	</div>

<script src="{{ DOMAIN }}/view/painel/src/js/scripts/pages/pedidos.js"></script>
{% endblock %}