{% extends "layout/layoutPanel.twig" %}

{% block title %} Pedidos {% endblock %}

{% block body %}

    <!-- BEGIN: Content-->
    <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row"></div>
            <div class="content-body">

				<div class="card">
					<div class="card-body">

                        <div class="table-responsive"> 
                            <div class="table-responsive"> 
                                <div class="table-wrapper">
                                    <table class="table table-striped table-hover" id="table-list-list">
                                        <thead>
                                            <tr>
                                                <th class="text-center" width="50">ID</th>
                                                <th width="125">Data Pedido</th>
                                                <th>Comprador</th>
                                                <th>Valor Pedido</th>
                                                <th width="50">Status</th>
                                                <th class="text-end">Opções</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for pedido in pedidos %}
                                            <tr>
                                                <th class="text-center" width="50">{{ pedido.id }}</th>
                                                <td width="125">{{ pedido.date_create }}</td>
                                                <td>{{ pedido.id_user }}</td>
                                                <td>{{ pedido.valor_total_pedido }}</td>
                                                <td width="50" class="{{ pedido.status_pedido }} text-white text-center">
                                                    <i class="fa-lg {{ pedido.status_pedido }}"></i> {{ pedido.status_pedido }}	
                                                </td>
                                                <td width="255" class="text-end">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                    </div>
                                                </td>               
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
						
					</div>
				</div>

			</div>
		</div>
	</div>

<script src="{{ DOMAIN }}/view/painel/src/js/scripts/pages/pedidos.js"></script>
{% endblock %}