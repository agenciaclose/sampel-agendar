{% extends "layout/layoutPanel.twig" %}

{% block title %}56 minutos - Meus Saques{% endblock %}

{% block body %}

    <!-- BEGIN: Content-->
    <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- Dashboard Ecommerce Starts -->
                <section id="dashboard-ecommerce">

                    <div class="row">

                        <div class="col-lg-4 col-12">
                            <div class="card card-company-table">
                                <div class="card-body">
                                   
                                    <form method="post" action="javascript:void(0)" id="categorias_servicos" enctype="multipart/form-data">

                                        <div class="form-group mb-1">
                                            <label class="form-label" for="nome">Nome</label>
                                            <input name="nome" id="nome" type="text" value="{{ categorias_editar['nome'] }}" size="40" aria-required="true" class="form-control" placeholder="Nome da Categoria" onkeyup="format_slug($(this).val(), 'slug')">
                                        </div>

                                        <div class="form-group mb-1">
                                            <label class="form-label" for="slug">Slug</label>
                                            <input name="slug" id="slug" type="text" value="{{ categorias_editar['slug'] }}" size="40" class="form-control" onkeyup="format_slug($(this).val(), 'slug')">
                                            <small class="mt-1">O “slug” é uma versão amigável do URL. Normalmente, é todo em minúsculas e contém apenas letras, números e hífens.</small>
                                        </div>

                                        <p class="submit mt-2">
                                            <input type="hidden" name="id" value="{{ categorias_editar['id'] }}">
                                            <input type="submit" id="add-categoria" class="btn btn-primary" value="{{ (categorias_editar['id']) ? 'Salvar alterações' : 'Adicionar nova Categoria' }}">
                                        </p>

                                    </form>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8 col-12">
                            <div class="card card-company-table">
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table dataTable_list">
                                            <thead>
                                                <tr>
                                                    <th>Nome</th>
                                                    <th>Slug</th>
                                                    <th width="100" class="text-end">Contagem</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for categoria in categorias %}
                                                <tr>
                                                    <td>
                                                        <div><a href="/painel/produtos_editar.php?id=1" class="title text-uppercase">{{ categoria.nome }}</a></div>
                                                        <div class="row-actions">
                                                            <span class="edit"><a href="{{ DOMAIN }}/painel/admin/servicos/categorias/{{ categoria.id }}">Editar</a> | </span>
                                                            <span class="delete"><a href="javascript:void(0);" data-toggle="modal" data-remote="assets/modal/produtos/status.php?id=1&status=Desativado" data-target="#alterar_status" class="text-danger">Lixeira</a></span>
                                                        </div>
                                                    </td>
                                                    <td>{{ categoria.slug }}</td>
                                                    <td class="text-end">0</td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Nome</th>
                                                    <th>Slug</th>
                                                    <th width="100" class="text-end">Contagem</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </section>

            </div>
        </div>
    </div>

    <script src="{{ PATH }}/view/painel/src/js/scripts/admin/servicos/categorias.js"></script>

{% endblock %}