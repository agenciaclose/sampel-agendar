<h5>{{ pergunta.pergunta }}</h5>
<div class="table-responsive">
    <table id="tabela_dinamica" class="table table-hover align-middle text-white" id="tabela_dinamica">
        <thead>
            <tr>
                <th class="d-none">#</th>
                <th>Coment√°rio</th>
                <th class="text-center">Qtd</th>
                <th class="text-center"><i class="fa-solid fa-users"></i></th>
            </tr>
        </thead>
        <tbody>
            {% for estatistica in pergunta.estatisticas %}
            <tr>
                <td class="d-none">{{ loop.indice }}</td>
                <td>{{ estatistica.resposta }}</td>
                <td class="text-center">{{ estatistica.qtd }}</td>
                <td class="text-center">
                    <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#pessoas_nota_{{ loop.index }}"><i class="fa-solid fa-users"></i></a>
                    <div class="modal fade" id="pessoas_nota_{{ loop.index }}" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable modal-lg">
                            <div class="modal-content">
                                <div class="modal-body">
                                   <table class="table table-striped font-size-small">
                                        <tbody>
                                            {% for pessoa in estatistica.pessoas %}
                                            <tr>
                                                <td class="text-uppercase" align="left">{{ pessoa.nome }}</td>
                                                <td class="text-lowercase">{{ pessoa.email }}</td>
                                                <td class="text-lowercase">{{ pessoa.telefone }}</td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                   </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>