{% extends "layout/layoutMaster.twig" %}

{% block title %} Galeria de Fotos {% endblock %}

{% block body %}

<div class="container py-5">

	<link href="{{ DOMAIN }}/view/src/js/plugins/lightgallery/css/lightgallery.min.css" rel="stylesheet">
	<script src="{{ DOMAIN }}/view/src/js/plugins/lightgallery/js/lightgallery-all.min.js"></script>

	<session class="py-5">

		<div class="mb-4">
			<div class="d-flex justify-content-between mb-2">
				<h3 class="mb-0">{{ palestra.title }}</h3>
				{% if (_session.sampel_user_tipo == 1) %}
					<a href="{{ DOMAIN }}/palestras/galeria/{{ palestra.id }}" class="btn btn-warning fw-bolder"><i class="fa-solid fa-pen-to-square"></i> Editar Fotos</a>
				{% endif %}
			</div>

			<div class="d-flex justify-content-between">
				<div>Palestrante: <span class="text-warning fw-bold">{{ palestra.palestrante_nome }}</span></div>
				<div>Data de Início: <span class="text-warning fw-bold">{{ palestra.data_palestra | date("d/m/Y H:i") }}</span></div>
				<div>Data de Término: <span class="text-warning fw-bold">{{ palestra.data_fim | date("d/m/Y H:i") }}</span></div>
			</div>
		</div>

		<hr>

		<div>
			<div class="gallery-suite">
				<div id="lightgallery" class="row">
					{% if imagens %}
						{% for imagem in imagens %}
							<a class="col-sm-12 col-md-6 col-lg-4 col-xl-3 " href="{{ imagem.imagem }}" data-exthumbimage="{{ imagem.imagem }}" data-src="{{ imagem.imagem }}" style="background-image:url('{{ imagem.imagem }}');"></a>
						{% endfor %}
					{% else %}
					<div class="text-center my-5"><h4 class="text-warning">NENHUMA IMAGEM DISPONÍVEL</h4></div>
					{% endif %}
				</div>
			</div>

		</div>

	</session>
</div>
<script type="text/javascript">
$('#lightgallery').lightGallery({
	loop:true,
	thumbnail:true,
	exThumbImage: 'data-exthumbimage',
	download: true,
	share: false,
	autoplay: false,
	autoplayControls: false
});
</script>
{% endblock %}