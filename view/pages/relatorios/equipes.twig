{# BLOCOS DE DADOS 2 #}
<div class="col-md-6">
    <div class="card">
        <div class="card-body">
            <div id="equipes"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
var equipesData = '[{% for equipe in total_equipe %}["{{ equipe.nome|upper }}", {{ equipe.total }}, true, true]{% if not loop.last %},{% endif %}{% endfor %}]';
var equipes = JSON.parse(equipesData);

Highcharts.chart('equipes', {
    chart: {
        type: 'bar'
    },
    title: {
        text: 'TOTAL DE PARTICIÇÕES POR EQUIPE'
    },
    xAxis: {
        type: 'category'
    },
    yAxis: {
        title: {
            text: ''
        }
    },
    legend: {
        enabled: false
    },
    tooltip: {
        pointFormat: '<b>{point.y:.0f} Total</b>'
    },
    series: [{
        name: 'Equipe',
        colorByPoint: true,
        groupPadding: 1,
        data: equipes,
        dataLabels: {
            enabled: true,
            color: '#FFFFFF',
            align: 'right',
            format: '{point.y:.0f}',
            x: 0,
        }
    }]
});

</script>
