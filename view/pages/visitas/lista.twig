{% extends "layout/layoutMaster.twig" %}

{% block title %} Visitas {% endblock %}

{% block body %}

<div class="container py-5">
	
	<session>

		<div class="row mb-4">
			<div class="col-sm-12 col-md-8">
				<div><h5>Lista de inscrições: <span class="text-warning">{{ visita.title }}</span></h5></div>
				<div><h5>Data da Visita: <span class="text-warning">{{ visita.data_visita | date("d-m-Y") }} as {{ visita.horario_visita }}</span></h5></div>
				<div class="limit-3">{{ visita.descricao }}</div>
			</div>
			<div class="col-sm-12 col-md-4">
				<div><h5 class="text-warning">Estatísticas da Visita:</h5></div>
				<div class="badge {{ _get.setor == '' ? 'bg-warning' : 'bg-light' }} mb-1 me-1"><a class="text-black" href="{{ DOMAIN }}/visita/lista/{{ visita.visita_id }}">Total <span class="badge bg-black">{{ total.total }}</span></a></div>
				{% for grupo in grupos %}
					<div class="badge {{ _get.setor == grupo.setor ? 'bg-warning' : 'bg-light' }} mb-1 me-1"><a class="text-black" href="{{ DOMAIN }}/visita/lista/{{ visita.visita_id }}?setor={{ grupo.setor }}">{{ grupo.setor }} <span class="badge bg-black">{{ grupo.total }}</span></a></div>
				{% endfor %}
			</div>
		</div>

		<hr>

		<div class="table-responsive">
			<table id="tabela_dinamica" class="table table-hover align-middle text-white pt-4 mb-4" style="width:100%">
		        <thead>
		            <tr>
						<th class="d-none">#</th>
						<th>Nome</th>
						<th>Email</th>
						<th>Setor</th>
						<th>Endereço</th>
						<th class="text-end">Crachá</th>
					</tr>
		        </thead>
		        <tbody>
		        	{% for lista in listas %}
						<tr>
							<td class="d-none">{{ lista.visita_id }}</td>

							<td class="ps-0 text-uppercase">{{ lista.nome }}</td>
							<td class="ps-0">{{ lista.email }}</td>
							<td class="ps-0">{{ lista.setor }}</td>
							<td class="ps-0">{{ lista.cidade }}, {{ lista.estado }}</td>
							<td class="text-end pe-0">
								<a href="{{ DOMAIN }}/etiqueta/{{ lista.codigo }}" target="_blank" class="badge bg-dark"><i class="fa-regular fa-arrow-up-right-from-square"></i> VER INSCRIÇÃO</a>
							</td>

						</tr>
					{% endfor %}
		        </tbody>
		    </table>
		</div>

	</session>

</div>

{% endblock %}