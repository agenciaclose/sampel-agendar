{% extends "layout/layoutMaster.twig" %}

{% block title %} Sorteados {% endblock %}

{% block body %}

<div class="container py-5">
	
	<session>

		<div class="row mb-4">
			<div class="col-sm-12 col-md-8">
				<div><h5>LISTA DE SORTEADOS: <span class="text-warning">{{ visita.title }}</span></h5></div>
			</div>
	
		</div>

		<hr>

		<div class="table-responsive">
			<table id="tabela_dinamica" class="table table-hover align-middle text-white pt-4 mb-4" style="width:100%">
		        <thead>
		            <tr>
						<th class="d-none">#</th>
						<th>Nome</th>
						<th>Email</th>
						<th>Telefone</th>
						<th>Endere√ßo</th>
					</tr>
		        </thead>
		        <tbody>
		        	{% for lista in listas %}
						<tr {{ lista.repescagem == 'Sim' ? 'class="bg-warning text-black"' }}>
							<td class="d-none">{{ lista.visita_id }}</td>
							<td class="{{ lista.repescagem == 'Sim' ? 'text-black' }} ps-0 text-uppercase position-relative">{{ lista.nome }}</td>
							<td class="{{ lista.repescagem == 'Sim' ? 'text-black' }} ps-0 text-uppercase">{{ lista.email }}</td>
							<td class="{{ lista.repescagem == 'Sim' ? 'text-black' }} ps-0">{{ lista.telefone }}</td>
							<td class="{{ lista.repescagem == 'Sim' ? 'text-black' }} ps-0">{{ lista.cidade }}, {{ lista.estado }}</td>
						</tr>
					{% endfor %}
		        </tbody>
		    </table>
		</div>

	</session>

</div>

{% endblock %}