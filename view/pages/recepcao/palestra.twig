{% extends "layout/layoutMaster.twig" %}

{% block title %} Recepção {% endblock %}

{% block body %}

<script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>

<div class="container py-5">
	
	<session>

		<div class="row">

			<div class="col-sm-12 col-md-12">

				<h4 class="text-center">TOTAL DE CONFIRMADOS: <span class="badge bg-light text-black">{{ confirmados|length }}</span></h4>

				<div class="card col-md-6 m-auto">
					<div class="card-body">
						<form action="javascript:void(0);" method="POST" id="confirmar-presenca">

							<input class="form-control form-control-lg text-center codigo" type="text" name="codigo" placeholder="CÓDIGO OU CPF">
							<input type="hidden" name="id_palestra" id="id_palestra" value="{{ palestra.id }}">
							<hr>
							<div id="sendContentModal"><button type="submit" class="btn btn-warning btn-lg w-100 fw-bold rounded-0">VERIFICAR INSCRIÇÃO</button></div>

						</form>
					</div>
				</div>

				{# <div id="camera"></div>
				
				<div class="w-75 text-center m-auto mt-4">
					<div id="sendContent"><button type="button" class="btn btn-warning btn-lg w-100 fw-bold rounded-0" disabled>VERIFICAR INSCRIÇÃO</button></div>
				</div>

				<div class="mt-5 text-center">
					<a href="javascript:void(0)" class="fw-bold text-warning" data-bs-toggle="modal" data-bs-target="#confirmar">VERIFICAR PELO CÓDIGO DE INSCRIÇÃO</a>
				</div> #}

			</div>

			<div class="table-responsive mt-5">
				<table id="tabela_dinamica" class="table table-hover align-middle text-white pt-4 mb-4 table-sm" style="width:100%">
					<thead>
						<tr>
							<th>NOME</th>
							<th class="text-end">CPF</th>
						</tr>
					</thead>
					<tbody>
						{% for confirmado in confirmados %}
							<tr>
								<td class="text-uppercase"><b>{{ confirmado.nome }}</b></td>
								<td class="text-end">{{ confirmado.cpf|UserCPF }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

		</div>

	</session>

</div>

