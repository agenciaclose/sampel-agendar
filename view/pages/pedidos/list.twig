{% extends "layout/layoutMaster.twig" %}

{% block title %} Pedidos {% endblock %}

{% block body %}

<div class="container py-5">
	
	<session>

        <div class="card">
            <div class="card-body">
                <form action="" method="GET">
                    <div class="row align-items-end">
                        <div class="col-md-4 col-sm-6 col-12">
                            <div class="mb-1">
                                <label for="id_equipe" class="form-label">Data do Pedido:</label>
                                <div class="input-group">
                                    <input type="date" class="form-control" name="de" value="{{ _get.de }}">
                                <span class="input-group-text">a</span>
                                    <input type="date" class="form-control" name="ate" value="{{ _get.ate }}">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-6 col-12">
                        {% if 'manager' in permissions.pedidos or permissions == 'all' %}
                            <div class="mb-1">
                                <label for="id_equipe" class="form-label">Retirada em nome:</label>
                                <select class="form-control text-uppercase select2" name="id_equipe" id="id_equipe">
                                    <option value="">Selecione</option>
                                    {% for equipe in equipes %}
                                        <option value="{{ equipe.id }}" {{ _get.id_equipe == equipe.id ? 'selected' }}>{{ equipe.nome }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        {% endif %}
                        </div>

                        <div class="col-md-2 col-sm-6 col-12">
                            <div class="mb-1">
                                <label for="id_equipe" class="form-label">Status do Pedido:</label>
                                <select class="form-control text-uppercase" name="status_pedido" id="status_pedido">
                                    <option value="">Selecione</option>
                                    <option value="0" {{ _get.status_pedido == '0' ? 'selected' }}>{{ '0'|pedidoStatus|raw }}</option>
                                    <option value="1" {{ _get.status_pedido == '1' ? 'selected' }}>{{ '1'|pedidoStatus|raw }}</option>
                                    <option value="2" {{ _get.status_pedido == '2' ? 'selected' }}>{{ '2'|pedidoStatus|raw }}</option>
                                    <option value="3" {{ _get.status_pedido == '3' ? 'selected' }}>{{ '3'|pedidoStatus|raw }}</option>
                                    <option value="4" {{ _get.status_pedido == '4' ? 'selected' }}>{{ '4'|pedidoStatus|raw }}</option>
                                    <option value="5" {{ _get.status_pedido == '5' ? 'selected' }}>{{ '5'|pedidoStatus|raw }}</option>
                                    <option value="6" {{ _get.status_pedido == '6' ? 'selected' }}>{{ '6'|pedidoStatus|raw }}</option>
                                    <option value="7" {{ _get.status_pedido == '7' ? 'selected' }}>{{ '7'|pedidoStatus|raw }}</option>
                                    <option value="10" {{ _get.status_pedido == '10' ? 'selected' }}>{{ '10'|pedidoStatus|raw }}</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-2 col-sm-6 col-12">
                            <div class="mb-1 btn-group d-flex">
                                <button type="submit" class="btn btn-primary w-100 fw-bolder" id="salvar">FILTRAR</button>
                                <a href="{{ DOMAIN }}/pedidos" class="btn btn-danger px-2 flex-shrink-1" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Resetar Filtro"><i class="fa-solid fa-octagon-xmark"></i></a>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="mb-2">
                    {% set valor_total = 0 %}
                    {% for pedido in pedidos %}
                        {% set valor_total = valor_total + pedido.valor_total_pedido %}
                    {% endfor %}
                    <div class="d-flex {{ 'add' in permissions.pedidos or permissions == 'all' ? 'justify-content-between' : 'justify-content-center' }} align-items-center">
                        <div class="fw-bolder">VALOR TOTAL: <span class="text-success ms-1">R$ {{ valor_total|number_format(2, ',', '.') }}</span></div>
                        {% if 'add' in permissions.pedidos or permissions == 'all' %}
                            <div><a href="{{ DOMAIN }}/pedidos/add" class="btn btn-success text-black fw-bolder"><i class="fa-solid fa-basket-shopping"></i> Adicionar Novo</a></div>
                        {% endif %}
                    </div>
                </div>

                <div class="min-vh-100"> 
                    <table class="table table-striped table-hover" id="pedidos">
                        <thead>
                            <tr>
                                <th class="text-center" width="50">ID</th>
                                <th>Comprador</th>
                                <th>Evento</th>
                                <th>Descrição</th>
                                <th>Valor Pedido</th>
                                <th width="200">Status</th>
                                <th class="text-end">Opções</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for pedido in pedidos %}
                            <tr>
                                <th class="text-center" width="50">{{ pedido.id }}</th>
                                <td>
                                    <a href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}">{{ pedido.equipe }}</a>
                                    <div><a href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}" class="opacity-50"><small>{{ pedido.date_create|date("d-m-Y H:i") }}</small></a></div>
                                </td>
                                <td>
                                    <a href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}" class="text-uppercase" data-bs-toggle="tooltip" data-bs-placement="top"
                                    data-bs-title="{{ pedido.descricao_pedido }}">
                                        {% if pedido.tipo_evento == 'eventos' %}
                                            {{ pedido.nome_evento }}
                                        {% elseif pedido.tipo_evento == 'visitas' %}
                                            {{ pedido.nome_visita }}
                                        {% elseif pedido.tipo_evento == 'palestras' %}
                                            {{ pedido.nome_palestra }}
                                        {% else %}
                                            <span class="opacity-50">Pedido Extra</span>
                                        {% endif %}                             
                                    </a>
                                    <div><a href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}" class="opacity-50"><small>{{ pedido.estado_pedido }}</small></a></div>
                                </td>
                                <td><a class="fw-bolder" href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}">R$ {{ pedido.valor_total_pedido|number_format(2, ',', '.') }}</a></td>
                                <td width="200" class="bg-{{ pedido.status_pedido|pedidoStatusColor }} fw-bolder text-center text-uppercase text-black">
                                    {{ pedido.status_pedido|pedidoStatus|raw }}
                                </td>
                                <td width="100" class="text-end">
                                    <div class="btn-group dropstart">
                                        <a href="javascript:void(0)" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa-solid fa-ellipsis"></i>
                                        </a>
                                        <ul class="dropdown-menu">
                                            {% if pedido.status_pedido != 'Recusado' %}
                                                <li><a class="dropdown-item" href="{{ DOMAIN }}/painel/pedidos/print/{{ pedido.id }}" target="_blank"><i class="fa-solid fa-file-pdf"></i> Gerar PDF</a></li>
                                            
                                                {% if 'add' in permissions.pedidos or permissions == 'all' %}
                                                    {% if pedido.status_pedido == 'Revisar' %}
                                                        <li><a class="dropdown-item" href="{{ DOMAIN }}/pedidos/edit/{{ pedido.id }}"><i class="fa-solid fa-pen-to-square"></i> Editar</a></li>
                                                    {% endif %}
                                                {% endif %}
                                                
                                                {% if 'manager' in permissions.pedidos or permissions == 'all' %}
                                                    <li><a class="dropdown-item" href="{{ DOMAIN }}/pedidos/edit/{{ pedido.id }}"><i class="fa-solid fa-pen-to-square"></i> Editar</a></li>
                                                    <li><a class="dropdown-item" href="javascript:void(0)" data-remote="{{ DOMAIN }}/pedidos/moderate?id={{ pedido.id }}" data-bs-remote="modal" data-bs-toggle="modal" data-bs-target="#moderarModal"><i class="fa-solid fa-shield-check"></i> Moderar</a></li>
                                                {% endif %}

                                            {% else %}
                                                <li><a class="dropdown-item text-center" href="javascript:void(0)">Pedido recusado <br>não pode ser <br>gerenciado</a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>    
            
            </div>    
        </div>    

	</session>
</div>
	
<div class="modal fade" id="moderarModal" tabindex="-1" aria-labelledby="moderarLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content"><div class="modal-body"></div></div>
  </div>
</div>
<script src="{{ DOMAIN }}/view/painel/src/js/scripts/pages/pedidos.js"></script>
{% endblock %}