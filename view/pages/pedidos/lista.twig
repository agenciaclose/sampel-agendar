{% extends "layout/layoutMaster.twig" %}

{% block title %} Pedidos {% endblock %}

{% block body %}

<div class="container py-5">
	
	<session>

        <form action="" method="GET">
            <div class="row align-items-end">
                <div class="col-md-4 col-sm-6 col-12">
                    <div class="mb-1">
                        <label for="id_equipe" class="form-label">Data do Pedido:</label>
                        <div class="input-group">
                            <input type="date" class="form-control" name="de" value="{{ _get.de }}">
                        <span class="input-group-text">a</span>
                            <input type="date" class="form-control" name="ate" value="{{ _get.ate }}">
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6 col-12">
                {% if 'manager' in permissions.pedidos or permissions == 'all' %}
                    <div class="mb-1">
                        <label for="id_equipe" class="form-label">Retirada em nome:</label>
                        <select class="form-control text-uppercase select2" name="id_equipe" id="id_equipe">
                            <option value="">Selecione</option>
                            {% for equipe in equipes %}
                                <option value="{{ equipe.id }}" {{ _get.id_equipe == equipe.id ? 'selected' }}>{{ equipe.nome }}</option>
                            {% endfor %}
                        </select>
                    </div>
                {% endif %}
                </div>

                <div class="col-md-2 col-sm-6 col-12">
                    <div class="mb-1">
                        <label for="id_equipe" class="form-label">Status do Pedido:</label>
                        <select class="form-control text-uppercase" name="status_pedido" id="status_pedido">
                            <option value="">Selecione</option>
                            <option value="Pendente" {{ _get.status_pedido == 'Pendente' ? 'selected' }}>Pendente</option>
                            <option value="Aprovado" {{ _get.status_pedido == 'Aprovado' ? 'selected' }}>Aprovado</option>
                            <option value="Recusado" {{ _get.status_pedido == 'Recusado' ? 'selected' }}>Recusado</option>
                            <option value="Revisar" {{ _get.status_pedido == 'Revisar' ? 'selected' }}>Revisar</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-2 col-sm-6 col-12">
                    <div class="mb-1 btn-group d-flex">
                        <button type="submit" class="btn btn-warning w-100 fw-bolder" id="salvar">FILTRAR</button>
                        <a href="{{ DOMAIN }}/pedidos" class="btn btn-danger px-1 flex-shrink-1" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Resetar Filtro"><i class="fa-solid fa-octagon-xmark"></i></a>
                    </div>
                </div>

            </div>
        </form>

        <div class="my-4">
            {% set valor_total = 0 %}
            {% for pedido in pedidos %}
                {% set valor_total = valor_total + pedido.valor_total_pedido %}
            {% endfor %}
            <div class="d-flex {{ 'add' in permissions.pedidos or permissions == 'all' ? 'justify-content-between' : 'justify-content-center' }} align-items-center">
                <div class="fs-5 fw-bolder">VALOR TOTAL: <span class="text-warning ms-1">R$ {{ valor_total|number_format(2, ',', '.') }}</span></div>
                {% if 'add' in permissions.pedidos or permissions == 'all' %}
                    <div><a href="{{ DOMAIN }}/pedidos/add" class="btn btn-warning fw-bolder"><i class="fa-solid fa-basket-shopping"></i> Adicionar Novo</a></div>
                {% endif %}
            </div>
        </div>


        <div class="min-vh-100"> 
            <table class="table table-striped table-hover" id="pedidos">
                <thead>
                    <tr>
                        <th class="text-center" width="50">ID</th>
                        <th>Comprador</th>
                        <th>Descrição</th>
                        <th>Valor Pedido</th>
                        <th width="100">Status</th>
                        <th class="text-end">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    {% for pedido in pedidos %}
                    <tr>
                        <th class="text-center" width="50">{{ pedido.id }}</th>
                        <td>
                            <a href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}">{{ pedido.equipe }}</a>
                            <div><a href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}" class="opacity-50"><small>{{ pedido.date_create|date("d-m-Y H:i") }}</small></a></div>
                        </td>
                        <td>
                            <a href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}" class="text-uppercase">{{ pedido.descricao_pedido }}</a>
                            <div><a href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}" class="opacity-50"><small>{{ pedido.estado_pedido }}</small></a></div>
                        </td>
                        <td><a class="{{ pedido.status_pedido }}-text fw-bolder" href="{{ DOMAIN }}/pedidos/view/{{ pedido.id }}">R$ {{ pedido.valor_total_pedido|number_format(2, ',', '.') }}</a></td>
                        <td width="100" class="{{ pedido.status_pedido }}-bg text-black fw-bolder text-center text-uppercase">
                            {{ pedido.status_pedido|payStatus|raw }}
                            <div><small>{{ pedido.status_entrega }}</small></div>
                        </td>
                        <td width="100" class="text-end">
                            <div class="btn-group dropstart">
                                <a href="javascript:void(0)" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-ellipsis"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    {% if pedido.status_pedido != 'Recusado' %}
                                        <li><a class="dropdown-item border-bottom" href="{{ DOMAIN }}/painel/pedidos/print/{{ pedido.id }}" target="_blank"><i class="fa-solid fa-file-pdf"></i> Gerar PDF</a></li>
                                       
                                        {% if 'add' in permissions.pedidos or permissions == 'all' %}
                                            {% if pedido.status_pedido == 'Revisar' %}
                                                <li><a class="dropdown-item border-bottom" href="{{ DOMAIN }}/pedidos/edit/{{ pedido.id }}"><i class="fa-solid fa-pen-to-square"></i> Editar</a></li>
                                            {% endif %}
                                        {% endif %}
                                        
                                        {% if 'manager' in permissions.pedidos or permissions == 'all' %}
                                            <li><a class="dropdown-item border-bottom" href="{{ DOMAIN }}/pedidos/edit/{{ pedido.id }}"><i class="fa-solid fa-pen-to-square"></i> Editar</a></li>
                                        <li><a class="dropdown-item border-bottom" href="javascript:void(0)" onclick="statusPedido({{ pedido.id }},'Aprovado')"><i class="fa-solid fa-shield-check"></i> Aprovar</a></li>
                                        <li><a class="dropdown-item border-bottom" href="javascript:void(0)" onclick="statusPedido({{ pedido.id }},'Revisar')"><i class="fa-solid fa-pen-to-square"></i> Revisar</a></li>
                                        <li><a class="dropdown-item border-bottom" href="javascript:void(0)" onclick="statusPedido({{ pedido.id }},'Recusado')"><i class="fa-solid fa-shield-xmark"></i> Recusar</a></li>
                                        {% endif %}

                                    {% else %}
                                        <li><a class="dropdown-item text-center" href="javascript:void(0)">Pedido recusado <br>não pode ser <br>gerenciado</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>    

	</session>
</div>
	

<script src="{{ DOMAIN }}/view/painel/src/js/scripts/pages/pedidos.js"></script>
{% endblock %}